<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>boardServlet</servlet-name>
        <servlet-class>ex1006.servlet.BoardServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>boardServlet</servlet-name>
        <url-pattern>/board</url-pattern>
    </servlet-mapping>


    <context-param>
        <param-name>no1</param-name>
        <param-value>1</param-value>
    </context-param>

    <context-param>
        <param-name>no2</param-name>
        <param-value>2</param-value>
    </context-param>

    <context-param>
        <param-name>no3</param-name>
        <param-value>3</param-value>
    </context-param>


    <context-param>
        <param-name>subject1</param-name>
        <param-value>쉬고싶다</param-value>
    </context-param>

    <context-param>
        <param-name>subject2</param-name>
        <param-value>Spring</param-value>
    </context-param>

    <context-param>
        <param-name>subject3</param-name>
        <param-value>HTML</param-value>
    </context-param>


    <context-param>
        <param-name>content1</param-name>
        <param-value>이제 곧 쉬어요^^</param-value>
    </context-param>

    <context-param>
        <param-name>content2</param-name>
        <param-value>프레임웍</param-value>
    </context-param>

    <context-param>
        <param-name>content3</param-name>
        <param-value>front 기술</param-value>
    </context-param>

    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>ex1006.servlet.LoginServlet</servlet-class>
        <init-param>
            <param-name>dbId</param-name>
            <param-value>kgu1022</param-value>
        </init-param>
        <init-param>
            <param-name>dbPwd</param-name>
            <param-value>1234</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>



    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>ex1006.servlet.LogoutServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>



</web-app>